<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:contentDescription="Profile Avatar"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_myplaces" />

        <!-- Profile Name -->

        <!-- Score Row -->

        <TextView
            android:id="@+id/tvProfileName315"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Profile Name"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="253dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvEmail315"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Email: Duchuy2315@mail.com"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPhone315"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Phone: +0905 123 546"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvSkype315"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Skype: ms007"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvWeb315"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web: customer.com"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tvScore1315"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="40dp"/>

            <TextView
                android:id="@+id/tvScore2315"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Info box -->

    </LinearLayout>
</ScrollView>
